# edit abbr
abbr ae="chezmoi edit .sheldon/zsh/defe/alias.zsh"
abbr abe="chezmoi edit .config/zsh/abbreviations"

# base command
abbr ls="ls -GF"
abbr la="ls -AGF"
abbr ll="ls -AlhG"

# chezmoi
abbr cu="chezmoi update -v"
abbr ca="chezmoi apply -v"
abbr ce="chezmoi edit"
abbr ccd="chezmoi cd"
abbr cga="chezmoi git -- add -A"
abbr cgd="chezmoi git diff -v HEAD"
abbr cgc="chezmoi git -- commit"
abbr cgp="chezmoi git -- push origin main"
abbr cp="chezmoi git -- add -A && chezmoi git -- commit && chezmoi git -- push origin main"

# git
abbr gcm="git checkout main"

# Homebrew
alias brewu='brew update && brew upgrade && brew cleanup && brew doctor'

# Atcoder-cli
abbr accs="acc s --skip-filename -- --guess-python-interpreter pypy"
abbr acct="poetry run oj t -c 'python3 main.py' -d ./tests/"
abbr accn='(){acc new $1 && cd $1}'
