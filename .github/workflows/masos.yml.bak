name: macos

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  macos-test:
    runs-on: macos-latest

    steps:
      - uses: actions/checkout@v3

      # Error Check
      - name: Run install.sh
        run: /bin/bash ${GITHUB_WORKSPACE}/install.sh

      - name: Load .zshenv
        run: |
          zsh -i -l -c exit 2> error.log; cat error.log
          if [ -s error.log ]; then false; fi
      
      - name: Run Neovim
        run: |
        nvim --headless +qa 2> error.log; cat error.log
        if [ -s error.log ]; then false; fi